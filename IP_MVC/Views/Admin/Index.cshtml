@model IEnumerable<BL.Domain.Project>

<h2>Admin Dashboard</h2>

<h3>Managed projects</h3>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in Model)
    {
    <tr>
        <td>@project.Name</td>
        <td>@project.Description</td>
        <td>
            @*<a href="@Url.Action("Edit", "Project", new { id = project.Id })">Edit</a>*@
            @*<a href="@Url.Action("Delete", "Project", new { id = project.Id })">Delete</a>*@
        </td>
    </tr>
    }
    </tbody>
</table>

