@using IP_MVC
@model IEnumerable<BL.Domain.Project>

<h2 class="mb-3">Dashboard</h2>

<h3 class="mb-3">Managed projects</h3>
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Name</td>
            <td>@project.Description</td>
            <td>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Flow", "Flow", new { projectId = project.Id })">Open</a>
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Project", new { parentFlowId = project.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Project", new { parentFlowId = project.Id })" onclick="return confirm('Are you sure you want to delete this project?')">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if (User.IsInRole(CustomIdentityConstants.AdminRole))
{
    <button class="btn btn-success" id="popupCreateButton">Create Project</button>
    @await Html.PartialAsync("_Create", new BL.Domain.Project())
    
}

@section Scripts
{
    <script src="~/dist/createProject.entry.js"></script>
}