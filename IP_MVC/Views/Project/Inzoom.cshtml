@using IP_MVC
@model BL.Domain.Project
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<body class="inzoom">
<div class="d-flex justify-content-center">
    <img src="https://storage.googleapis.com/phygital-public/Flows/flow_page_hands_1.png" class="z-1 w-100 h-100 position-fixed" alt="Afbeelding_van_flow">
    <div class="card border-1 h-50 position-absolute">
        <div class="card-body">
            <div class="position-sticky">
                <h5 class="card-title sticky-top">@Model.Name</h5>
            </div>
            <div class="overflow-y-scroll">
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
        <div class="d-flex align-items-center justify-content-center text-center py-3 overflow-x-scroll overflow-y-hidden button-container">
            <div class="flex-grow-1">
                <a class="btn arrow-submit-left" href="@Url.Action("Project", "Project", new { parentFlowId = Model.Id })"></a>
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn bi bi-trash" href="@Url.Action("Delete", "Project", new { parentFlowId = Model.Id })" onclick="return confirm('Are you sure you want to delete this project?')"></a>
                }
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn py-0 bi bi-graph-up" href="@Url.Action("Analytic", "Analytic", new { projectId = Model.Id })"></a>
                }
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn" href="@Url.Action("Edit", "Project", new { parentFlowId = Model.Id })">Edit</a>
                }
            </div>
            <div class="flex-grow-1">
                <a class="btn arrow-submit-right" href="@Url.Action("Flow", "Flow", new { projectId = Model.Id })"></a>
            </div>
        </div>
    </div>
</div>
</body>