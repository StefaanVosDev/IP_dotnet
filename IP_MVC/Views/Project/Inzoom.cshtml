@using IP_MVC
@model BL.Domain.Project
@{
    ViewBag.Title = "title";
    Layout = "_Layout";

    var randomIndex = new Random().Next(1, 5);
    var imageUrl = $"https://storage.googleapis.com/phygital-public/Flows/flow_page_hands_{randomIndex}.png";
}

<body>
<div class="position-relative">
    <img src="@imageUrl" class="w-100 h-80 position-relative " alt="Afbeelding_van_flow">
    <div class="card h-50 position-absolute">
        <div class="card-body ">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="d-flex align-items-center text-center position-sticky">
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn bi bi-trash" href="@Url.Action("Delete", "Project", new { parentFlowId = Model.Id })" onclick="return confirm('Are you sure you want to delete this project?')"></a>
                }
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn" href="@Url.Action("Edit", "Project", new { parentFlowId = Model.Id })">Edit</a>
                }
            </div>
            <div class="flex-grow-1">
                <a id="arrow-submit" class="btn" href="@Url.Action("Flow", "Flow", new { projectId = Model.Id })"></a>
            </div>
        </div>
    </div>
</div>
</body>