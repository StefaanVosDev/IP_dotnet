@using IP_MVC
@model BL.Domain.Project
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<body class="inzoom">
<div>
    <div class="card border-1 h-50 position-absolute">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="d-flex align-items-center justify-content-center text-center py-3">
            <div class="flex-grow-1">
                <a id="arrow-submit-left" class="btn" href="@Url.Action("Project", "Project", new { parentFlowId = Model.Id })"></a>
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn bi bi-trash" href="@Url.Action("Delete", "Project", new { parentFlowId = Model.Id })" onclick="return confirm('Are you sure you want to delete this project?')"></a>
                }
            </div>
            <div class="flex-grow-1">
                @if (User.IsInRole(CustomIdentityConstants.AdminRole))
                {
                    <a class="btn" href="@Url.Action("Edit", "Project", new { parentFlowId = Model.Id })">Edit</a>
                }
            </div>
            <div class="flex-grow-1">
                <a id="arrow-submit-right" class="btn" href="@Url.Action("Flow", "Flow", new { projectId = Model.Id })"></a>
            </div>
        </div>
    </div>
</div>
</body>