@model BL.Domain.Questions.RangeQuestion

@{
    ViewBag.Title = "Range";
    Layout = "_Layout";
}

<div class="row py-2">
    <img src="https://via.placeholder.com/200x100" alt="Afbeeldingsplaatsaanduiding">
</div>
<div class="row py-2">
    <p class="text-start fw-bold">Question @ViewData["QuestionNumber"]</p>
    <p>@Model.Text</p>
</div>
<div class="row py-2 slider-container">
    <div class="slider-values">
        @for (var i = Model.Min; i <= Model.Max; i += (Model.Max - Model.Min) / 10)
        {
            <span>@i</span>
        }
    </div>
    <input type="range" min="@Model.Min" max="@Model.Max">
</div>
<div class="row py-2">
    <div class="col-auto me-auto">
        <a href="" class="btn btn-secondary">Previous</a>
    </div>
    <div class="col-auto">
        <a href="" class="btn btn-secondary">Next</a>
    </div>
</div>