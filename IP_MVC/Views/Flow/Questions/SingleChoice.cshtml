@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BL.Domain.Questions.SingleChoiceQuestion

@{
    ViewBag.Title = "Single Choice";
    Layout = "_Layout";
}

<div class="row py-2">
    <img src="https://via.placeholder.com/200x100" alt="Afbeeldingsplaatsaanduiding">
</div>
<div class="row py-2">
    <p class="text-start fw-bold">Question</p>
    <p>@Model.Text</p>
</div>
<div class="row bg-secondary-subtle border border-black my-2">
    <form asp-action="SaveAndNext" asp-controller="Flow" method="post">
        @for (int i = 0; i < Model.Options.Count; i++)
        {
            <div class="form-check m-3">
                <input class="form-check-input" name="Answer" type="radio" id="radio@i" value="@Model.Options[i]">
                <label class="form-check-label" for="radio@i">
                    @Model.Options[i]
                </label>
            </div>
        }
        <input type="hidden" name="flowId" value="@Model.FlowId"/>
        <input type="hidden" name="id" value="@Model.Id"/>
        <input type="hidden" name="QuestionId" value="@Model.Id"/>
        <input type="submit" value="Next"/>
    </form>
</div>