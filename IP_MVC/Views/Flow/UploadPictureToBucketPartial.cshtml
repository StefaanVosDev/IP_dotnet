@model BL.Domain.Flow 
@inject DAL.Interfaces.ICloudStorageRepository CloudStorageRepository

@{ var imageExists = CloudStorageRepository.FileExists(Uri.EscapeDataString(Model.Name) + ".jpg"); }

<div class="col">
    <div class="card">
        @if (imageExists)
        {
        <img src="https://storage.googleapis.com/phygital-public/Flows/@(Uri.EscapeDataString(Model.Name)).jpg" alt="Foto flow">
        }
        else
        {
        <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadFile">
            <input type="hidden" name="fileName" value="@Model.Name" />
            <input type="hidden" name="folderName" value="Flows" />
            <div class="form-group">
                <label for="file">Choose file</label>
                <input type="file" class="form-control-file" id="file" name="file">
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <a href="@Url.Action("SubFlow", "Flow", new { id = Model.Id })" class="btn btn-primary">View Subflows</a>
        </div>    }
    </div>
</div>
