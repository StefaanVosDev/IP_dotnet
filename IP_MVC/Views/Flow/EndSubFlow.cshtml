@model IP_MVC.Models.EndSubFlowViewModel
@{
    ViewBag.Title = "End of SubFlow";
    Layout = "_Layout";
}

<div class="card text-center">
    <div class="card-header">
        <h2>Thank You!</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">Session Summary</h5>
        <ul style="list-style-type: none;">
            @foreach (var question in Model.Questions)
            {
                <li>
                    <strong>Q:</strong> @question.Text
                    <br />
                    <strong>A:</strong> @Model.Answers.FirstOrDefault(a => a.QuestionId == question.Id)?.AnswerText
                </li>
                <br />
            }
        </ul>
    </div>
    <div class="card-footer text-muted">
        <a href="@Url.Action("SubFlow", "Flow", new { id = Model.FlowId })" class="btn btn-primary">Return to SubFlow</a>
    </div>
</div>