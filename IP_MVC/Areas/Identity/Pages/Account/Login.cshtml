@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<body class="login">
<div class="container-fluid ">
    <div class="row justify-content-center align-items-center">
        <div id="youth-speak" class="py-3 text-center d-flex flex-column justify-content-center align-items-center">
            <h1 class="display-3">YouthSpeak<span class="up">Up</span></h1>
        </div>
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                        <label asp-for="Input.Email" class="form-label">Username</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox d-flex align-items-center"> <!-- Voeg de d-flex en align-items-center klassen toe -->
                        <input class="form-check-input" asp-for="Input.RememberMe"/>
                        <label asp-for="Input.RememberMe" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex align-items-center justify-content-end">
                        <button id="login-submit" type="submit" class="btn py-0"></button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
